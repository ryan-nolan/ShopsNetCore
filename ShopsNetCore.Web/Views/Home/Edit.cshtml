@{
    ViewData["Title"] = $"Edit {Model.Shop.Name}";
}
<h1>Edit</h1>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Shop.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shop.Name" class="control-label"></label>
                <input asp-for="Shop.Name" class="form-control" />
                <span asp-validation-for="Shop.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.Description" class="control-label"></label>
                <input asp-for="Shop.Description" class="form-control" />
                <span asp-validation-for="Shop.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.AddressLineOne" class="control-label"></label>
                <input asp-for="Shop.AddressLineOne" class="form-control" />
                <span asp-validation-for="Shop.AddressLineOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.AddressLineTwo" class="control-label"></label>
                <input asp-for="Shop.AddressLineTwo" class="form-control" />
                <span asp-validation-for="Shop.AddressLineTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.Postcode" class="control-label"></label>
                <input asp-for="Shop.Postcode" class="form-control" />
                <span asp-validation-for="Shop.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.ShopType" class="control-label"></label>
                <select class="form-control" asp-for="ShopType"
                        asp-items="@Model.ShopType"></select>
                <span asp-validation-for="Shop.ShopType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.OpeningTime" class="control-label"></label>
                <input asp-for="Shop.OpeningTime" class="form-control" />
                <span asp-validation-for="Shop.OpeningTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.ClosingTime" class="control-label"></label>
                <input asp-for="Shop.ClosingTime" class="form-control" />
                <span asp-validation-for="Shop.ClosingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

